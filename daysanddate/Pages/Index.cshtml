@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="text-center">
    <h1 class="display-4">Date and Days</h1>

</div>

<div class="text-center">
    <form method="post">

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <label asp-for="data.Days"> </label>
        <input type="number" asp-for="data.Days" />

        <span class="text-danger" asp-validation-for="data.Days"></span>

        <br />

        <label asp-for="data.Date"> </label>
        <input type="date" asp-for="data.Date" />

        <span class="text-danger" asp-validation-for="data.Date"></span>

        <br />

        <span class="text-danger" asp-validation-for="data.Date"></span>

        <button type="submit" class="btn btn-primary" value="submit"> Submit </button>
    </form>
</div>
